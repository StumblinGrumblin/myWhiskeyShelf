<div class="container">


  <div class="row">
    <div id="display-card" class="col-md-8 col-md-offset-2">
      <div class="row">
        <div class="pull-left title">
          <p>
            <%= @whisky.name %>
          </p>
        </div>

        <div class="destroy pull-right">
          <%= link_to 'X', @whisky, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure you want to delete this review?' } %>
        </div>
        <p id="notice"><%= notice %></p>
      </div>
      <div id= "vital-info" class="row panel panel-default">
        <%= image_tag(@whisky.image_url) %>
        <div id="static-info" class="pull-right">


          <p>
            <strong>Region:</strong>
            <%= @whisky.region %>
          </p>

          <p>
            <strong>Size:</strong>
            <%= @whisky.size %>
          </p>

          <p>
            <strong>Abv:</strong>
            <%= @whisky.abv %>
          </p>
        </div>

      </div>

      <div id="tasting-info" class="row">
        <h3>Tasting Notes</h3>
        <p>
          <strong>Color:</strong>
          <%= @whisky.color %>
        </p>

        <p>
          <strong>Body:</strong>
          <%= @whisky.body %>
        </p>

        <p>
          <strong>Nose:</strong>
          <%= @whisky.nose %>
        </p>

        <p>
          <strong>Palatte:</strong>
          <%= @whisky.palatte %>
        </p>

        <p>
          <strong>Finish:</strong>
          <%= @whisky.finish %>
        </p>

        <p>
          <strong>Notes:</strong>
          <%= @whisky.notes %>
        </p>

      </div>


      <div id="purchase-info" class="row">
        <h4>Purchase Information</h4>
        <p>
          <strong>Point of sale:</strong>
          <%= @whisky.point_of_sale %>
        </p>

        <p>
          <strong>Price:</strong>
          <%= @whisky.price %>
        </p>
      </div>


    </div>
  </div>
</div>


<%= link_to 'Edit', edit_whisky_path(@whisky) %> |
<%= link_to 'Back', whiskies_path %>
