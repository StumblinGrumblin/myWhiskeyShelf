
<p id="notice"><%= notice %></p>

<div id="display-card" class="col-md-8 col-md-offset-2">
  <div class="row heading">
    <div class="pull-left">
      <h1>
        <%= @whisky.name %>
      </h1>
    </div>
    <div class="pull-right score">
      <h1><%= @whisky.score %></h1>
    </div>
  </div>

  <div id="static-info" class="row">
    <div class="pull-left">
      <%= image_tag(@whisky.image_url) %>
      <div class="pull-right bottle-info">
        <p>
          <%= @whisky.region %>
          </br>
          <%= @whisky.size %> mL
          </br>
          <%= @whisky.abv %> abv
        </p>
      </div>
    </div>

    <div class="pull-right">
      <%= link_to whiskies_path, class: "btn btn-nfo btn-xs" do %>
        <i class="mdi-navigation-arrow-back"></i>
      <% end %>
      <%= link_to edit_whisky_path(@whisky), class: "btn btn-info btn-xs" do %>
        <i class="glyphicon glyphicon-edit"></i>
      <% end %>
      <%= link_to @whisky, method: :delete, class: "btn btn-danger btn-xs", data: { confirm: 'Are you sure you want to delete this review?' }  do %>
      <i class="mdi-action-delete"></i>
      <% end %>
    </div>
  </div>


  <div id="tasting-info" class="row">

    <h3>Tasting Notes</h3>
    <p>
      <strong>Color:</strong>
      <%= @whisky.color %>
    </p>

    <p>
      <strong>Body:</strong>
      <%= @whisky.body %>
    </p>

    <p>
      <strong>Nose:</strong>
      <%= @whisky.nose %>
    </p>

    <p>
      <strong>Palatte:</strong>
      <%= @whisky.palatte %>
    </p>

    <p>
      <strong>Finish:</strong>
      <%= @whisky.finish %>
    </p>

    <p>
      <strong>Notes:</strong>
      <%= @whisky.notes %>
    </p>

  </div>

  <div id="purchase-info" class="row">
    <h4>Purchase Information</h4>
    <p>
      <strong>Point of sale:</strong>
      <%= @whisky.point_of_sale %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= number_to_currency @whisky.price %>
    </p>
  </div>
</div>
