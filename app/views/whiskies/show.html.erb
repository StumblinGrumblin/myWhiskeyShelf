
<p id="notice"><%= notice %></p>

<div id="display-card" class="col-md-8 col-md-offset-2">
  <div class="row">
    <h1>
      <%= @whisky.name %>
    </h1>
  </div>


  <div id= "vital-info" class="row panel panel-default">
    <%= image_tag(@whisky.image_url) %>
    <div id="static-info">


      <p>
        <%= @whisky.region %>
        </br>
        <%= @whisky.size %> mL
        </br>
        <%= @whisky.abv %> abv
      </p>
    </div>

  </div>

  <div id="tasting-info" class="row">
    <h3>Tasting Notes</h3>
    <p>
      <strong>Color:</strong>
      <%= @whisky.color %>
    </p>

    <p>
      <strong>Body:</strong>
      <%= @whisky.body %>
    </p>

    <p>
      <strong>Nose:</strong>
      <%= @whisky.nose %>
    </p>

    <p>
      <strong>Palatte:</strong>
      <%= @whisky.palatte %>
    </p>

    <p>
      <strong>Finish:</strong>
      <%= @whisky.finish %>
    </p>

    <p>
      <strong>Notes:</strong>
      <%= @whisky.notes %>
    </p>

  </div>

  <div id="purchase-info" class="row">
    <h4>Purchase Information</h4>
    <p>
      <strong>Point of sale:</strong>
      <%= @whisky.point_of_sale %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= number_to_currency @whisky.price %>
    </p>
  </div>

  <div class="pull-right">
    <%= link_to edit_whisky_path(@whisky), class: "btn btn-small btn-info" do %>
      <i class="glyphicon glyphicon-edit"></i>
    <% end %>
    <%= link_to @whisky, method: :delete, class: "btn btn-small btn-danger", data: { confirm: 'Are you sure you want to delete this review?' }  do %>
    <i class="glyphicon glyphicon-trash"></i>
    <% end %>
  </div>

</div>


<%= link_to 'Back', whiskies_path %>
